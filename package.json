{
  "name": "@kwhitley/yarn-release",
  "version": "1.3.1",
  "description": "Simplifies module releases to NPM via Yarn",
  "keywords": [
    "publish",
    "yarn",
    "npm",
    "libraries",
    "modules",
    "easy"
  ],
  "main": "bin/release.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "verify": "node bin/release.js --patch --src=bin --nocleanup --test --verbose",
    "verify:root": "node bin/release.js --patch --nocleanup --test --verbose",
    "release:major": "node bin/release.js --major --push",
    "release:minor": "node bin/release.js --minor --push",
    "release:patch": "node bin/release.js --patch --push"
  },
  "bin": {
    "release": "./bin/release.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kwhitley/yarn-release.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kwhitley/yarn-release/issues"
  },
  "homepage": "https://github.com/kwhitley/yarn-release#readme",
  "dependencies": {
    "app-root-path": "^2.1.0",
    "bluebird": "^3.5.3",
    "chalk": "^2.4.2",
    "commander": "^2.19.0",
    "fs-extra": "^7.0.1",
    "node-cmd": "^3.0.0",
    "np": "^4.0.2"
  }
}
